#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int game(char you , char comp);
{

if (you==comp)
{
return 0;
}
if (you == 's' && comp == 'p')
{
return 1;
}
else if (you == 'p' && comp == 's')
{ 
return -1;
}
if (you == 'r' && comp 'p')
{
return -1;
}
else if (you == 'p' && comp == 'r')
{
return 1;
}
if (you == 's' && comp 'r')
{
return -1;
}
else if (you == 'r' && comp == 's')
{
return 1;
}
}
int main()
{
    char you , comp;
    srand(time(0));
    int number =rand()%100+1;
    
    if (number<33)
    {
    comp='s';
    }
    else if (number >33 && number <66 )
    {
    comp='p';
    }
    else
    {
    comp = 'r';
    }
    printf("Enter 's' for scissor,'p' for paper,'r' for rock");
    scanf("%c",&you);
    int result=game(you,comp);
    printf("you choose %c and computer choose %c",you,comp);
    if (result == 0)
    {
    printf("game draw!\n");
    }
    else if (result==1)
    {
    printf("you won!\n");
    }
    else 
    {
    printf("you loose!");
    }
    return 0;
    
}
